<!--pages/gmxx/gmxx.wxml-->
<view>
  <view class='dizhi'>
  </view>
  <view>
    <view class="center" wx:for="{{carts}}" wx:key="*this">
      <view class="list">
        <!-- 图片 -->
        <view class="pic">
          <image src="{{item.imgurl}}"></image>
        </view>
        <!-- 类型表述 -->
        <view class="con">
          <text class="type1">{{item.type1}}</text>
          <text class="type2">{{item.type2}}</text>
          <text class='type3'>{{item.kuaidi}}</text>
        </view>
        <!-- 价格 -->
        <view class="price">
          <text class="price1">￥{{item.price}}</text>
          <text class="number">×{{item.num}}</text>
        </view>
      </view>

      <!-- 图文结束 -->
      <view class='num'>
        <text>购买数量</text>
        <text>购买数量</text>
      </view>
      <view class='num'>
        <text>配送方式</text>
        <text>快递 免邮</text>
      </view>
      <view class='liuyan'>
        <text class='wenzi'>买家留言:</text>
        <input class='seek' placeholder="选填：内容和卖家确定" auto-focus/>
      </view>
      <view class='heji'>
        <text>共{{item.num}}件商品</text>
        <text class='hehi_right'>小计：{{item.price}}</text>
      </view>
      <radio-group >
      <view class='abc'>
        <radio class='anniu' bindchange="radioChange">
          <view class='youhuiquan'>
            <button bindtap="actioncnt" class='btn'>优惠券</button>
          </view>
        </radio>
        <radio class='anniu'>
        <view class='hongbao'>
          <button  class='btn'>红包减免</button>
        </view>
        </radio>
        </view>
      </radio-group>

    </view>
  </view>

  <!-- 优惠券结束 -->
  <view class='tabber'>
    <text class='gongji'>合计：{{item.jine}}</text>
    <view class='c'>
      <text bindtap="tijiao" class='tabber_hs'>提交订单</text>
    </view>
  </view>

  <!-- 底部结束 -->
</view>