  color: #888;
}
.center {
  padding-top: 10rpx;
}

.center_list {
  margin-bottom: 10rpx;
}

.list {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #fff;
}

.news {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  background-color: #fff;
  font-size: 12px;
  color: #171717;
}

.list_a {
  display: flex;
  justify-content: center;
