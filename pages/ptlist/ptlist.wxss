/* pages/ptlist/ptlist.wxss */
.wrap {
  padding: 0 20rpx;
}
.item {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  margin-top: 20rpx;
  box-shadow: 0 0 3px #888;
  background-color: #fff;
}

.item image {
  margin-right: 10rpx;
  width: 160rpx;
  height: 160rpx;
}

.itemright {
  display: flex;
  align-items: center;
}

.con {
  margin-right: 40rpx;
  font-size: 14px;
  color: #888;
}

.t1 {
  font-size: 14px;
  color: tomato;
  margin-bottom: 10px;
}
.t2 {
  font-size: 14px;
  color: #7BCF3B;
  margin-bottom: 2px;
}
.t3 {
  font-size: 16px;
}
