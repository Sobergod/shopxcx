<!--pages/ptxq/ptxq.wxml-->
<view class='Container'>
  <view class='lunbo'>
    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
      <block wx:for="{{goodsItem.shopPhotos}}">
        <swiper-item>
          <image src="{{item}}" class="slide-image" width="355" height="150" />
        </swiper-item>
      </block>
    </swiper>
  </view>

  <!--轮播图结束-->
  <view class='navber'>
    <view class='navber_left'>
      <text class='left_top'>{{goodsItem.shopname}}</text>
      <text class='left_bottom'>{{goodsItem.shopInfo}}</text>
    </view>
    <view class='navber_right'>
      <text class='right_top'>￥{{goodsItem.shopmoney}}</text>
    </view>
  </view>
  <!-- 标题结束 -->

  <view class='pj'>
    <text class='pj_left'>用户评价</text>
    <text class='iconfont icon-arrow-right'></text>
  </view>
  <!-- 用户评价结束 -->

  <view class='pj'>
    <text class='pj_left'>拼团商品只可购买一次</text>
    <!-- <text class='iconfont icon-arrow-right'></text> -->
  </view>

  <view class='sm'>
    <view class='pp'>
      <text class='pp'>{{goodsItem.shopinfo}}</text>
    </view>
  </view>

  <view class='xx'>
    <text class='pj_left'>商品信息</text>
  </view>
  <view>
    <block wx:for="{{goodsItem.photoMore}}" wx:key="{{item.fid}}">
      <image class="image_frame" src="{{item}}" mode="aspectFill">
      </image>
    </block>
  </view>

  <!-- 用户评价结束 -->
  <view>
  </view>

  <view class='kg'>
  </view>
  <!-- 产品说明结束 -->

  <view class='kg'></view>
  <view class='tabber'>
    <button class='w'>
      <text class='iconfont icon-kefu'></text>
      <text>客服</text>
    </button>
    <view class='a' bindtap='changeCollectionTap' data-gid='{{goodsItem.shopid}}' data-status='{{status}}'>
      <text class='iconfont {{status?"icon-shoucang":"icon-shoucang1" }}'></text>
      <text>收藏</text>
    </view>
    <!-- <view class='a' bindtap='gotoCart'>
      <text class='iconfont icon-gouwuche'></text>
      <text>购物车</text>
    </view> -->
    <view class='b' bindtap='ptPayTap' data-id='{{goodsItem.shopid}}' data-img='{{goodsItem.shopphoto}}' data-name='{{goodsItem.shopname}}' data-price='{{goodsItem.shopmoney}}' data-count='{{1}}'>
      <text class='tabber_cs'>￥{{goodsItem.shopmoney}}</text>
      <text class='tabber_cs'>单独购买</text>
    </view>
    <view class='c' bindtap='ptPayTap' data-id='{{goodsItem.shopid}}' data-img='{{goodsItem.shopphoto}}' data-name='{{goodsItem.shopname}}' data-price='{{goodsItem.money}}' data-count='{{1}}'>
      <text class='tabber_hs'>￥{{goodsItem.money}}</text>
      <text class='tabber_hs'>发起拼团</text>
    </view>
  </view>

  <!-- 底部结束 -->
</view>